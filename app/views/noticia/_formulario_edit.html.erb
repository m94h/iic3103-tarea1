<%= form_for @noticia do |f| %>

  <% if @noticia.errors.any? %>
    <p class="bg-danger">
      Hay <%= pluralize(@noticia.errors.count, "error") %> error(es) que debe corregir:
      <% @noticia.errors.full_messages.each do |msg| %>
        <span style="display:block">- <%= msg %></span>
      <% end %>
    </p>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %>
    <%= f.text_field :titulo, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :bajada %><br>
    <%= f.text_area :bajada, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :cuerpo %><br>
    <%= f.text_area :cuerpo, :class => 'form-control' %>
  </div>

  <div>
    <%= f.submit nil, :class => 'btn btn-default' %>
  </div>
<% end %>
