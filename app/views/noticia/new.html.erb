<h1>Nueva Noticia</h1>

<%= form_for :noticia, url: noticia_path do |f| %>
  <p>
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo %><br>
  </p>

  <p>
    <%= f.label :bajada %><br>
    <%= f.text_area :bajada %>
  </p>

  <p>
    <%= f.label :cuerpo %><br>
    <%= f.text_area :cuerpo %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
